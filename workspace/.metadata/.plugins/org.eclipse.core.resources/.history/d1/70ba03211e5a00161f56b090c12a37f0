		H1 h1 = new H1();
		h1.appendChild( new Text("Automation Result") );
		
		summaryTable = new Table();
		summaryTable.setAttribute("id", "summaryTable");
		
		Tr rowS = new Tr();
	
		Th th1S = new Th();
		th1S.appendChild(new Text("Suite Name"));			
