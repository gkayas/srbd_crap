package uva;

public class Limit {
	int x = 3;
	
	public static void inc(Limit l) {
		l.x++;
	}
	
	public static void incx(int x) {
		x = x+2;
	}
	
	public static void dec(Limit l) {
		l.x--;
	}
	
	public static void print(Limit l){
		System.out.println(l.x);
	}
	
	
	public static void main(String []args) {
		
		Limit l1 = new Limit();
		inc(l1);
		incx(l1.x);
		
		print(l1);
	}
}
